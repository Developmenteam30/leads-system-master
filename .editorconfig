root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.blade.php]
indent_size = 0
tab_width = 4
ij_continuation_indent_size = 2
ij_blade_keep_indents_on_empty_lines = false
